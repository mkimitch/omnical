# Required
API_KEY=change-me-please

# Optional / defaults
PORT=8787
BIND_ADDR=127.0.0.1
DATA_DIR=./data
DB_PATH=./data/cal.db
LOG_LEVEL=info
SYNC_INTERVAL_MS=300000
NODE_ENV=development

# OAuth encryption key: 32-byte base64 (44 chars)
# Example (do not use in prod): OAUTH_ENCRYPTION_KEY=YmFzZTY0LXNlY3JldC1iYXNlNjQtc2VjcmV0LXNlY3JldA==
OAUTH_ENCRYPTION_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.readonly

# ICS bootstrap (comma-separated URLs)
ICS_URLS=
