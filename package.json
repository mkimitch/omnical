{
	"name": "omnical",
	"version": "0.1.0",
	"description": "A TypeScript calendar service that syncs Google Calendar and ICS feeds into a local SQLite database",
	"license": "MIT",
	"author": "Mark Kimitch",
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/omnical.git"
	},
	"keywords": [
		"calendar",
		"google-calendar",
		"ics",
		"ical",
		"sync",
		"aggregator",
		"api",
		"typescript",
		"sqlite"
	],
	"type": "module",
	"main": "dist/index.js",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/index.js",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"drizzle:generate": "drizzle-kit generate",
		"drizzle:migrate": "drizzle-kit migrate",
		"auth:google": "tsx src/cli/authGoogleDevice.ts",
		"add:gcal": "tsx src/cli/addGoogleCal.ts",
		"add:ics": "tsx src/cli/addIcsCal.ts"
	},
	"dependencies": {
		"better-sqlite3": "^9.4.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.33.0",
		"fastify": "^4.28.1",
		"fastify-plugin": "^4.5.1",
		"luxon": "^3.5.0",
		"node-ical": "^0.16.1",
		"pino": "^9.2.0",
		"rrule": "^2.8.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.8",
		"@types/luxon": "^3.7.1",
		"@types/node": "^22.7.4",
		"@typescript-eslint/eslint-plugin": "^8.9.0",
		"@typescript-eslint/parser": "^8.9.0",
		"drizzle-kit": "^0.24.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"pino-pretty": "^11.2.2",
		"prettier": "^3.3.3",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"vitest": "^2.1.2"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
